{
  "name": "wpify-plugin",
  "version": "2.2.3",
  "main": "assets/plugin.jsx",
  "scripts": {
    "start": "wpify start",
    "build": "wpify build",
    "hot": "wpify hot"
  },
  "author": "WPify <info@wpify.io>",
  "license": "ISC",
  "engines": {
    "node": ">=v14.15.3"
  },
  "sideEffects": [
    "*.scss"
  ],
  "browserslist": [
    "defaults",
    "cover 97%"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react-hooks",
      "babel",
      "react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "useJSXTextNode": true,
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "globals": {
      "document": false,
      "wp": false,
      "__webpack_public_path__": true,
      "wpify": false
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".json"
          ]
        }
      },
      "react": {
        "version": "v16.9.0"
      }
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-scss",
      "stylelint-order"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "selector-type-no-unknown": [
        true,
        {
          "ignoreTypes": [
            "/^custom-/"
          ]
        }
      ],
      "order/properties-alphabetical-order": true
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "@wordpress/block-editor": "^5.2.5",
    "@wordpress/blocks": "^7.0.2",
    "@wordpress/components": "^12.0.5",
    "@wordpress/dom-ready": "^2.12.1",
    "@wordpress/hooks": "^2.12.0",
    "@wordpress/i18n": "^3.18.0",
    "@wordpress/icons": "^2.9.1",
    "classnames": "^2.2.6",
    "eslint-plugin-babel": "^5.3.1",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "wpify-scripts": "^2.0.0"
  }
}
